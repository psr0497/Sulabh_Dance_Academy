            div#signup
                <button type="button" class="btn btn-primary my-4" data-toggle="modal" data-target="#signupModal"id="but">
                Launch SignUp
                </button>

                <!--SignUp Modal -->
                <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModal" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="signupModal">SignUp Form</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                            <form method="POST"action="/api/sign/signup">
                                <div class="form-group">
                                    <label for="Email">Email address</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"name="email">
                                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                </div>
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input type="text" class="form-control" id="exampleInputPassword1"name="name">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="password" class="form-control" id="exampleInputPassword1"name="password">
                                </div>
                                <div class="form-group">
                                    <label for="confirm__password">Confirm Password</label>
                                    <input type="password" class="form-control" id="exampleInputPassword1"name="confirm_password">
                                </div>
                                                          
                                 <div class="form-group">
                                    <button class="btn btn-primary">Submit
                                    </button>
                                </div>
                                
                    
                            </form>
                            </div>
                    </div>
                </div>
                </div>
                
                <button type="button" class="btn btn-primary my-4" data-toggle="modal" data-target="#loginModal"id="but">
                Launch Login
